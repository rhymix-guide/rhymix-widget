# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{php,html,xml}]
indent_size = 4

[*.{js,ts,cs,scss}]
indent_size = 2

[*.{neon,neon.dist}]
indent_size = 4
indent_style = tab
